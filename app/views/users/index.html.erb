
<% if notice.present? %>
<p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
  <%= notice %>
</p>
<% end %>

<div class="text-center">
   <div data-controller="user-modal">
      <button
         data-action="click->user-modal#openModal"
         class="w-56 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 mb-4">
      User Profile
      </button>
   </div>
   <div data-controller="employment-modal">
      <button 
        data-action="click->employment-modal#openModal"
        class="w-56 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50">
      Add Employment
      </button>
   </div>
</div>

<%= render 'user_modal_form', user: @user %>



<%= render 'employment_modal_form', locals: { user: @user, employments: @employments, employment: @employment } %>

